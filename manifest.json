{
  "manifest_version": 3,
  "name": "Floating Speak Button",
  "version": "1.0",
  "description": "Adds a floating speak button",
  "permissions": [
    "activeTab",
    "scripting",
    "tts"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
    "background": {
        "service_worker": "background.js"
    }
}